
@{
    ViewData["Title"] = "ForgotPassword";
}

@model User

<script src="~/js/ForgotPassword.js"></script>

<form method="post" id="forgotPasswordForm">
    <h3>Please enter your data to set your new password!</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Email" class="form-control" type="email" placeholder="Email">
    <h6 id='result'></h6>

    <input asp-for="Password" class="form-control" type="password" placeholder="Password">
    <h6 id='passRes'></h6>

    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
    <h6 id='confPassRes'></h6>

    <input asp-controller="Account" asp-action="ResetPassword" class="btn btn-secondary" type="submit" value="Submit">
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}