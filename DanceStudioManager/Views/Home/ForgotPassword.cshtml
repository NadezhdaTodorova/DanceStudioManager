
@{
    ViewData["Title"] = "ForgotPassword";
}


@model User

<form method="post" id="forgotPasswordForm" class="mt-5">
    <h3>Please enter your Email!</h3>

    <input asp-for="Email" class="form-control w-50"type="email" placeholder="Email">

    <input asp-controller="Account" asp-action="ForgotPassword" class="btn btn-secondary mt-2" type="submit" value="Submit">
</form>

